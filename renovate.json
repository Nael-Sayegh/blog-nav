{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":enableVulnerabilityAlertsWithLabel('security')",
    ":rebaseStalePrs",
    "group:recommended"
  ],
  "configMigration": true,
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "lockFileMaintenance": {
    "enabled": true
  },
  "git-submodules": {
    "enabled": true
  },
  "ignorePaths": [
    "**/vendor/**",
    "include/lib/facebook/composer.json"
  ],
  "timezone": "Europe/Paris"
}
